<main class="contenedor">
  <form action="/editar-perfil" method="POST" class="default-form">
    <div class="campo">
      <label>Nombre</label>
      <input
        value="{{usuario.nombre}}"
        type="text"
        name="nombre"
        placeholder="Tu Nombre"
      />
    </div>
    <div class="campo">
      <label>Correo</label>
      <input
        value="{{usuario.email}}"
        type="email"
        name="email"
        placeholder="Tu E-mail"
      />

    </div>
    <div class="campo">
      <label>Contrase√±a</label>
      <input type="password" name="password" placeholder="Tu Password" />
    </div>
    <div class="campo">
      <input type="submit" class="btn btn-azul" value="Guardar Cambios" />
    </div>

    <div class="campo" style="width: 300px;">
        <a href="/administracion" class="btn btn-rojo" style="color: white;">Cancelar</a>
    </div>

  </form>
</main>